{
	"trailingComma": "none",
	"tabWidth": 2,
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"singleAttributePerLine": true,
	"printWidth": 100,
	"proseWrap": "always",
	"bracketSpacing": true,
	"importOrder": [
		"^(react/(.*)$)|^(react$)",
    "^(next/(.*)$)|^(next$)",
		"<THIRD_PARTY_MODULES>",
		"^@/components/(.*)$",
		"^@/components/layout/(.*)$",
		"^@/components/ui/(.*)$",
		"^@/providers/(.*)$",
		"^@/constants/(.*)$",
		"^@/config/(.*)$",
		"^@/store/(.*)$",
		"^@/hooks/(.*)$",
		"^@/utils/(.*)$",
		"^@/api/(.*)$",
		"^@/server/(.*)$",
		"^(?!.*\\.scss$)(../.*)$",
		"^(?!.*\\.scss$)(./.*)$",
		".*\\.scss$"
	],
	"importOrderSortSpecifiers": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
